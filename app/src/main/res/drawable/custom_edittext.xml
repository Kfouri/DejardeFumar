<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/edittext_back1_pressed" android:endColor="@color/edittext_back3_pressed" android:angle="270.0" android:centerX="0.5" android:centerY="0.5" android:centerColor="@color/edittext_back2_pressed" />
            <stroke android:width="@dimen/edittext_stroke" android:color="@color/edittext_stroke" />
            <corners android:radius="@dimen/corner" />
            <padding android:left="@dimen/padding_medium" android:top="@dimen/padding_medium" android:right="@dimen/padding_medium" android:bottom="@dimen/padding_medium" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/edittext_back1_focused" android:endColor="@color/edittext_back3_focused" android:angle="270.0" android:centerX="0.5" android:centerY="0.5" android:centerColor="@color/edittext_back2_focused" />
            <stroke android:width="@dimen/edittext_stroke" android:color="@color/edittext_stroke" />
            <corners android:radius="@dimen/corner" />
            <padding android:left="@dimen/padding_medium" android:top="@dimen/padding_medium" android:right="@dimen/padding_medium" android:bottom="@dimen/padding_medium" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/edittext_back1" android:endColor="@color/edittext_back3" android:angle="270.0" android:centerX="0.5" android:centerY="0.5" android:centerColor="@color/edittext_back2" />
            <stroke android:width="@dimen/edittext_stroke" android:color="@color/edittext_stroke" />
            <corners android:radius="@dimen/corner" />
            <padding android:left="@dimen/padding_medium" android:top="@dimen/padding_medium" android:right="@dimen/padding_medium" android:bottom="@dimen/padding_medium" />
        </shape>
    </item>
</selector>